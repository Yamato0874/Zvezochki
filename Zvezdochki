#include <iostream>
using namespace std ;
void drawTriangle(int n) {
    for (int i = 1; i <= n; ++i) {
        for (int j = 1; j <= i; ++j) {
            cout << "* ";
        }
        cout << endl;
    }
}

int main() {
    int n;
    cout << "Высота треугольника будет равна : ";
    cin >> n;
    drawTriangle(n);
    return 0;
}
